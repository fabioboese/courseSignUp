pipeline {
  agent any
  
  stages {
    
    stage('Restore packages') {
      steps {
        sh "dotnet restore ${workspace}/CourseSignUp.sln"
      }
    }
    
    stage('Build') {
      steps {
        sh "dotnet build ${workspace}/CourseSignUp.sln"
      }
    }
    
    stage('Test') {
      steps {
        sh "dotnet test ${workspace}/CourseSignUp.sln"
      }
    }    
    
  }
}
